<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.main.MainActivity">

    <FrameLayout
        android:id="@+id/mFlContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.memo.widget.bottomnavigationbar.BottomNavigationViewEx
        android:id="@+id/mBottomView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconSize="@dimen/dp20"
        app:itemIconTint="@color/selector_color_navi"
        app:itemTextColor="@color/selector_color_navi"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_main_navi" />

</LinearLayout>