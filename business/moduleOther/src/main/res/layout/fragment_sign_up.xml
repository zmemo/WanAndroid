<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp25"
    android:paddingEnd="@dimen/dp25"
    tools:layout_height="@dimen/dp400"
    tools:layout_width="@dimen/dp300">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mEtAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:gravity="center"
            android:hint="Your Account"
            android:inputType="text"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/white" />

        <EditText
            android:id="@+id/mEtPwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:gravity="center"
            android:hint="Your Password"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginBottom="@dimen/dp10"
            android:background="@color/white" />

        <EditText
            android:id="@+id/mEtRePwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:background="@null"
            android:gravity="center"
            android:hint="Verify Password"
            android:inputType="textPassword"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp15"
        android:layout_marginTop="@dimen/dp25"
        android:layout_marginEnd="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp45">

        <com.ruffian.library.widget.RTextView
            android:id="@+id/mTvSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp50"
            android:gravity="center"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="@dimen/sp18"
            android:textStyle="bold"
            app:background_normal="@color/color_main"
            app:background_pressed="@color/color_main"
            app:corner_radius="@dimen/dp25" />

        <ProgressBar
            android:id="@+id/mProgress"
            android:layout_width="@dimen/dp100"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_main"
            android:indeterminateTint="@color/white"
            android:visibility="gone"
            tools:targetApi="lollipop" />
    </FrameLayout>

</LinearLayout>