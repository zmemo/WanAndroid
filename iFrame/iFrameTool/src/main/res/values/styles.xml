<resources>
	
	<style name="iTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/color_666666</item>
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/color_666666</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
		<item name="android:screenOrientation">portrait</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_hide</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_show</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

</resources>
